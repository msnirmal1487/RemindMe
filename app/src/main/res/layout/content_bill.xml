<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BillActivity"
    tools:showIn="@layout/activity_bill"
    android:orientation="vertical">


    <EditText
        android:id="@+id/edittext_bill_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Name for the bill"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittext_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Additional Notes for the bill"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/edittext_bill_name"
        app:layout_constraintStart_toStartOf="@+id/edittext_bill_name"
        app:layout_constraintTop_toBottomOf="@+id/edittext_bill_name" />

    <Switch
        android:id="@+id/switch_autopay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Autopay"
        app:layout_constraintEnd_toEndOf="@+id/edittext_note"
        app:layout_constraintTop_toBottomOf="@+id/edittext_note" />

    <Spinner
        android:id="@+id/spinner_frequency"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/switch_autopay"
        app:layout_constraintEnd_toStartOf="@+id/switch_autopay"
        app:layout_constraintStart_toStartOf="@+id/edittext_note"
        app:layout_constraintTop_toBottomOf="@+id/edittext_note" />

    <EditText
        android:id="@+id/edittext_tentative_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Tentative Date to pay"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/switch_autopay"
        app:layout_constraintStart_toStartOf="@+id/spinner_frequency"
        app:layout_constraintTop_toBottomOf="@+id/spinner_frequency" />

    <TextView
        android:id="@+id/textView_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="History"
        app:layout_constraintStart_toStartOf="@+id/edittext_tentative_date"
        app:layout_constraintTop_toBottomOf="@+id/edittext_tentative_date" />

</androidx.constraintlayout.widget.ConstraintLayout>